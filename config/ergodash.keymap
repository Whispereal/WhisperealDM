    combos {
        compatible = "zmk,combos";
        combo_underscore {  //调用下划线
            timeout-ms = <50>;
            key-positions = <29 30>;
            bindings = <&macro_underscore>;
            layers = <0>;
        };
        combo_minus {   //调用减号or中划线
            timeout-ms = <50>;
            key-positions = <17 18>;
            bindings = <&kp KP_MINUS>;
            layers = <0>;
        };       
        combo_LeftBrace {   //双击左大括号
            timeout-ms = <50>;
            key-positions = <28 29>;
            bindings = <&kp LBRC>;
            layers = <0>;
        };    
        combo_RightBrace {  //双击右大括号
            timeout-ms = <50>;
            key-positions = <30 31>;
            bindings = <&kp RBRC>;
            layers = <0>;
        };        
        combo_LeftParenthesis { //双击左圆括号
            timeout-ms = <50>;
            key-positions = <16 17>;
            bindings = <&kp LPAR>;
            layers = <0>;
        };          
        combo_RightParenthesis {    //双击右圆括号
            timeout-ms = <50>;
